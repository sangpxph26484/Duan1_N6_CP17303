<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".Fragment_N6_CP17303.FragmentBinhLuan">

    <LinearLayout
        android:id="@+id/ln_danhgia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FDE7C6"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:background="#EEFAFB"
            android:src="@drawable/img_pro" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Túi xách"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Đơn Giá: "
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"

                />

        </LinearLayout>

    </LinearLayout>
    <ListView
        android:id="@+id/lv_binhluan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
       app:layout_constraintTop_toBottomOf="@id/ln_danhgia"
        app:layout_constraintBottom_toTopOf="@id/btn_danhgia"
        android:layout_margin="8dp"/>
    <Button
        android:id="@+id/btn_danhgia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đánh Giá"
        android:layout_gravity="center"
        android:backgroundTint="#F44336"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>