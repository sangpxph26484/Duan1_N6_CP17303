<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SanPhamActivity"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:background="@color/colorActionbar">



        <ImageView
            android:layout_marginTop="4dp"
            android:id="@+id/imgBackctsp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:padding="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi tiết sản phẩm"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:textStyle="bold"
            android:textSize="26sp"
            android:textColor="@color/white"
            android:padding="8dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/imggiohang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:padding="8dp"
            android:src="@drawable/ic_giohang"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/imgSanpham"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/anhnen1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtTensanpham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm"
                android:padding="8dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/txtGiasanpham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giá: 25000"
                android:padding="8dp"
                android:textColor="#FB0404"
                android:textSize="15sp"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
               >
                <Button
                    android:focusable="false"
                    android:id="@+id/btnBotsanpham"
                    android:onClick="decrement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:backgroundTint="#C88383"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:gravity="center"
                    android:id="@+id/txtSoluongsp"
                    android:backgroundTint="@color/white"
                    android:focusable="false"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />
                <Button
                    android:focusable="false"
                    android:onClick="increment"
                    android:id="@+id/btnThemsanpham"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#C88383"
                    android:text="+"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/btnThemvaogiohang"
                android:textColor="@color/white"
                android:text="Thêm vào giỏ hàng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Mô tả chi tiết sản phẩm:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtMotachitiet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp" />
        </ScrollView>


    </LinearLayout>

    <ListView
        android:id="@+id/sanpham_lv_binhluan"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_gravity="end">



        <EditText
            android:id="@+id/sanpham_ed_binhluan"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="8"
            android:background="@drawable/botron_ed_binhluan"
            android:hint="Bình Luận"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:layout_gravity="bottom|end"
            />

        <ImageView
            android:id="@+id/sanpham_img_binhluan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_send"
            android:layout_gravity="bottom|end"/>
    </LinearLayout>
</LinearLayout>